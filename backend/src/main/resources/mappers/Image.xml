<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.model.dao.ImageDao">

    <resultMap id="ImageResult" type="com.ssafy.model.dto.domain.Image">
        <id     property="ino"         column="ino"/>
        <result property="filename"    column="filename"/>
        <result property="contentType" column="content_type"/>
        <result property="size"        column="size"/>
        <result property="storagePath" column="storage_path"/>
        <result property="createdAt"   column="created_at"/>
        <result property="updatedAt"   column="updated_at"/>
    </resultMap>

    <insert id="insertImage"
            parameterType="com.ssafy.model.dto.domain.Image"
            useGeneratedKeys="true"
            keyProperty="ino">
        INSERT INTO image
        (filename, content_type, size, storage_path)
        VALUES
        (#{filename}, #{contentType}, #{size}, #{storagePath})
    </insert>

    <update id="updateImage"
            parameterType="com.ssafy.model.dto.domain.Image">
        UPDATE image
        SET
        filename      = #{filename},
        content_type  = #{contentType},
        size          = #{size},
        storage_path  = #{storagePath}
        WHERE ino = #{ino}
    </update>

    <select id="getImageById"
            parameterType="int"
            resultMap="ImageResult">
        SELECT
        ino,
        filename,
        content_type,
        size,
        storage_path,
        created_at,
        updated_at
        FROM image
        WHERE ino = #{ino}
    </select>

    <delete id="deleteImage"
            parameterType="int">
        DELETE FROM image
        WHERE ino = #{ino}
    </delete>

</mapper>
