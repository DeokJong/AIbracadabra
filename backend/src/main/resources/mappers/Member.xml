<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.model.dao.MemberDao">

	<resultMap
		id="memberMap"
		type="com.ssafy.model.dto.domain.Member">
		<id
			property="mno"
			column="mno" />
		<result
			property="name"
			column="name" />
		<result
			property="email"
			column="email" />
		<result
			property="password"
			column="password" />
		<result
			property="role"
			column="role" />
	</resultMap>

	<insert
		id="add"
		parameterType="com.ssafy.model.dto.domain.Member"
		useGeneratedKeys="true"
		keyProperty="mno"
		keyColumn="mno">
		INSERT INTO members (name, email, password
		<if test="role != null and role != ''">
			, role
		</if>
		)
		VALUES
		(#{name}, #{email}, #{password}
		<if test="role != null and role != ''">
			, #{role}
		</if>
		)
	</insert>

	<select
		id="get"
		parameterType="int"
		resultMap="memberMap">
		SELECT mno, name, email, password, role
		FROM members
		WHERE mno
		= #{mno}
	</select>

	<select
		id="getByEmail"
		parameterType="string"
		resultMap="memberMap">
		SELECT mno, name, email, password, role
		FROM members
		WHERE
		email = #{email}
	</select>

	<update
		id="set"
		parameterType="com.ssafy.model.dto.domain.Member">
		UPDATE members
		<set>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="email != null">
				email = #{email},
			</if>
			<if test="password != null and password != ''">
				password = #{password},
			</if>
			<if test="role != null">
				role = #{role}
			</if>
		</set>
		WHERE mno = #{mno}
	</update>

	<delete
		id="remove"
		parameterType="int">
		DELETE FROM members
		WHERE mno = #{mno}
	</delete>

</mapper>
