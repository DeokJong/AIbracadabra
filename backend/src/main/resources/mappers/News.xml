<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.model.dao.NewsDao">

  <resultMap id="NewsResult" type="com.ssafy.model.dto.domain.News">
    <id     property="id"            column="id"/>
    <result property="title"         column="title"/>
    <result property="publishAt"   column="publish_at"/>
    <result property="sidoCode"      column="url_sido_code"/>
    <result property="summary"       column="summary"/>
    <result property="url"           column="url"/>
  </resultMap>
	
  <select id="selectAll" resultMap="NewsResult">
  	SELECT * FROM news
  
  </select>


  <select id="selectByUrl" parameterType="String" resultMap="NewsResult">
    SELECT * FROM news WHERE url = #{url}
  </select>

  <insert id="insert"
          useGeneratedKeys="true" keyProperty="id">
    INSERT INTO news
      (title, publish_at, url_sido_code, summary, url)
    VALUES
      (#{title}, #{publishAt}, #{sidoCode}, #{summary}, #{url})
  </insert>
  
  
  
  

</mapper>












